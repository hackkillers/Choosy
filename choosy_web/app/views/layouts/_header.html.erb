<header class="navbar navbar-default">
	<div class="container">
		<%= link_to image_tag("choosy.png", size: "200x100", alt: "Choosy"), root_path, id: "logo" %>
		<nav>
			<% if logged_in? %>
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to "Profile", user_url(current_user), id: "link" %></li>
					<li><%= link_to "Settings", edit_user_path(current_user), id: "link" %></li>
					<li><%= link_to "Sign out", signout_path, method: "delete", id: "link" %></li>
				</ul>
			<% else %>
				<ul class="nav navbar-nav navbar-right">
					<li><%= link_to "Sign Up", signup_path, id: "link" %></li>
					<li><%= link_to "Sign In", signin_path, id: "link" %></li>
				</ul>
			<% end %>
		</nav>
	</div>
</header>