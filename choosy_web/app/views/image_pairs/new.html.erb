<%= provide(:title, "Choosy | Create Post") %>
<section id="about" class="container content-section text-center">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
    	<h2>New Post</h2>
    	<%= form_for(@image_pair) do |f| %>
			  <% if @image_pair.errors.any? %>
			    <div id="error_explanation">
			      <h3><%= pluralize(@image_pair.errors.count, "error") %> prohibited this post from being created:</h3>
			      <ul>
			      <% @image_pair.errors.full_messages.each do |message| %>
			        <li><i><%= message %></i></li>
			      <% end %>
			      </ul>
			    </div>
			    <br>
			  <% end %>

			  <div class="field">
			    <%= f.label :caption %><br>
			    <%= f.text_field :caption %>
			  </div>
			  <div class="field">
			    <%= f.label :first_image %><br>
			    <%= f.file_field :first_image %>
			  </div>
			  <div class="field">
			    <%= f.label :second_image %><br>
			    <%= f.file_field :second_image %>
			  </div>
			  <br>
			  <div class="actions">
			    <%= f.submit :Confirm %>
			  </div>
			<% end %>	
    </div>
  </div>
</section>