<%= provide(:title, current_user.name) %>

<section id="about" class="container content-section text-center">
  <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
      	<%= image_tag(current_user.avatar, size: "120x120") %>
      	<br>
      	<br>
				<h2> My Posts </h2>
				<p>
				<% @image_pairs.each do |pair| %>
					<h2><%= pair.caption %></h2>
					<br>
						<%= image_tag(pair.images.first.avatar.url, size: 
						"280x180") %>
						<%= image_tag(pair.images.last.avatar.url, size: 
						"280x180") %>
				<% end %>
				</p>
      </div>
  </div>
</section>




	
